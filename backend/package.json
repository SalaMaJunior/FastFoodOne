{
  "name": "fastbite-backend",
  "version": "1.0.0",
  "description": "FastBite Food Delivery Backend - Microservices Architecture",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:gateway\" \"npm run dev:auth\" \"npm run dev:user\" \"npm run dev:restaurant\" \"npm run dev:order\" \"npm run dev:payment\" \"npm run dev:delivery\" \"npm run dev:notification\" \"npm run dev:ai\" \"npm run dev:analytics\"",
    "dev:gateway": "cd api-gateway && npm run dev",
    "dev:auth": "cd services/auth-service && npm run dev",
    "dev:user": "cd services/user-service && npm run dev",
    "dev:restaurant": "cd services/restaurant-service && npm run dev",
    "dev:order": "cd services/order-service && npm run dev",
    "dev:payment": "cd services/payment-service && npm run dev",
    "dev:delivery": "cd services/delivery-service && npm run dev",
    "dev:notification": "cd services/notification-service && npm run dev",
    "dev:ai": "cd services/ai-service && npm run dev",
    "dev:analytics": "cd services/analytics-service && npm run dev",
    "build": "npm run build:gateway && npm run build:services",
    "build:gateway": "cd api-gateway && npm run build",
    "build:services": "cd services && npm run build:all",
    "test": "npm run test:gateway && npm run test:services",
    "test:gateway": "cd api-gateway && npm test",
    "test:services": "cd services && npm run test:all",
    "lint": "npm run lint:gateway && npm run lint:services",
    "lint:gateway": "cd api-gateway && npm run lint",
    "lint:services": "cd services && npm run lint:all",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f"
  },
  "keywords": [
    "food-delivery",
    "microservices",
    "nodejs",
    "typescript",
    "mongodb",
    "redis",
    "jwt",
    "rest-api"
  ],
  "author": "FastBite Team",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "concurrently": "^8.2.0",
    "eslint": "^8.45.0",
    "nodemon": "^3.0.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "dotenv": "^16.3.0"
  }
}

